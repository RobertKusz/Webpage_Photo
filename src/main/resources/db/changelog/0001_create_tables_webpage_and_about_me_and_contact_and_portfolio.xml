<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0001" author="RobertKusz">
        <createTable tableName="webpage">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_background" type="VARCHAR(255)"/>
            <column name="photographer_photo" type="VARCHAR(255)"/>
            <column name="introduction_first_layer" type="VARCHAR(255)"/>
            <column name="introduction_second_layer" type="VARCHAR(255)"/>
            <column name="description_first_layer" type="VARCHAR(1000)"/>
            <column name="description_second_layer" type="VARCHAR(1000)"/>
            <column name="description_third_layer" type="VARCHAR(1000)"/>
            <column name="rolling_photo" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="contact">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="portfolio">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>




    <changeSet id="about-me-001" author="RobertKusz">
        <createTable tableName="about_me">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="about-me-002" author="RobertKusz">
        <createTable tableName="about_me_short_description">
            <column name="about_me_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="short_description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="about_me_short_description"
                baseColumnNames="about_me_id"
                referencedTableName="about_me"
                referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_short_about_me"/>
    </changeSet>

    <changeSet id="about-me-003" author="RobertKusz">
    <createTable tableName="about_me_long_description">
        <column name="about_me_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="long_description" type="VARCHAR(1000)">
            <constraints nullable="false"/>
        </column>
    </createTable>

    <addForeignKeyConstraint
            baseTableName="about_me_long_description"
            baseColumnNames="about_me_id"
            referencedTableName="about_me"
            referencedColumnNames="id"
            onDelete="CASCADE"
            constraintName="fk_long_about_me"/>
    </changeSet>

</databaseChangeLog>
