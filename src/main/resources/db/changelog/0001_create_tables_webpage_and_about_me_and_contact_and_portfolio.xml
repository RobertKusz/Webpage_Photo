<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0001" author="RobertKusz">
        <createTable tableName="webpage">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_background" type="VARCHAR(255)"/>
            <column name="photographer_photo" type="VARCHAR(255)"/>
            <column name="introduction_first_layer" type="VARCHAR(255)"/>
            <column name="introduction_second_layer" type="VARCHAR(255)"/>
            <column name="description_first_layer" type="VARCHAR(1000)"/>
            <column name="description_second_layer" type="VARCHAR(1000)"/>
            <column name="description_third_layer" type="VARCHAR(1000)"/>
            <column name="rolling_photo" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="about_me">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="contact">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="portfolio">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
